{% extends 'base.html.twig' %}

{% block title %} {{projet.name}} - L'Aiguille Du Marquiste {% endblock %}

{% block body %}
    <h1>{{projet.name}}</h1>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <article class="tatouage bg-white rounded shadow">
                <div class="mw-100 rounded-top overflow-hidden">
                    <img src="/uploads/{{projet.illustration}}" alt="{{ projet.name }}" class="w-100">
                </div>
                <h1 class="text-secondary h5 pl-3 pt-3">{{ projet.name }}</h1>
                <p class="pl-3 pr-3 pb-3 text-break">{{ projet.description }}</p>
                <p class="text-muted pl-3 pb-3"><small>Submitted by L'Aiguille Du Marquiste</small></p>
            </article>
        </div>
    </div> 

{% endblock %}